<body>

  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/">
      <img src="/images/map-marker.png" width="30" height="30" class="d-inline-block align-top" alt="">
      <span class="nav-bar-brand-title">NEW HERE</span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/profile">Profile<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/events">Events<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item border-left border-danger ml-2 pl-2">
          <a class="nav-link" href="/signin">Sign Out<span class="sr-only">(current)</span></a>
        </li>
      </ul>
    </div>
  </nav>

  <main id="main-content" class="container-fluid fill-screen">
    <div class="row d-flex justify-content-center mt-5">
      <div class="col-8 mrl-auto">
        <h4>Edit Event</h4>
        <form method="POST" action="/events/<%= event.id %>?_method=PUT">
          <div class="form-control">

            <label for="title" class="mt-3">Event Title</label>
            <input type="text" class="form-control mb-3" name="title" value="<%= event.title %>" required>

            <label for="description">Description</label>
            <textarea type="text" class="form-control mb-3" name="description" required><%= event.description %></textarea>

            <label for="date">Date, Time</label>
            <input type="datetime-local" class="form-control mb-3" name="date" value="<%= event.date %>" required>

            <label for="location">Location</label>
            <input type="text" class="form-control mb-3" name="location" value="<%= event.location %>" required>

            <label for="admin">Administrator</label>
            <input type="text" class="form-control mb-3" name="admin" value="<%= event.admin %>" required>

            <label for="photo">Photo</label>
            <input type="text" class="form-control mb-3" name="photo" value="<%= event.photo %>" required>

            <button type="submit" class="btn btn-warning mb-3">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-auto">
        <form method="POST" action="events/<%= event.id %>?_method=DELETE">
          <div class="row align-items-center mt-4 p-4 border border-danger rounded">
            <div class="col-auto">
              <button type="submit" class="btn btn-danger">Delete Event</button>
            </div>
            <div class="col-auto pt-2">
              <h6>Caution, this will permanently delete this event!</h6>
            </div>
          </div>
        </form>
      </div>
    </div>
  </main>

