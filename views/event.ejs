<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" 
        href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" 
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" 
        crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" media="screen" href="../stylesheets/style.css" />
  <link rel="stylesheet" type="text/css" media="screen" href="../stylesheets/events.css" />
  <link href="https://fonts.googleapis.com/css?family=Gochi+Hand|Rubik|Lato" rel="stylesheet">
</head>
<body>

  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/">
      <img src="/images/map-marker.png" width="30" height="30" class="d-inline-block align-top" alt="">
      <span class="nav-bar-brand-title">NEW HERE</span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/profile">Profile<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/events">Events<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item border-left border-danger ml-2 pl-2">
          <a class="nav-link" href="/signin">Sign Out<span class="sr-only">(current)</span></a>
        </li>
      </ul>
    </div>
  </nav>

  <main id="main-content" class="container-fluid fill-screen">
    <div class="row">
      <div class="col-auto mt-3 ml-3">
        <a href="/events"><< All Events</a>
      </div>
    </div>
    <div class="row mt-5 mr-3 ml-3">
      <div class="col-12">
        <h2><%= event.title %></h2>
        <div class="row mt-4 mb-5">
          <div class="col-4">
            <div class="row">
              <div class="col-12">
                <img src="<%= event.photo %>"
                class="img img-fluid img-shadow" />
              </div>
            </div>
            <div class="row mt-5">
              <div class="col-12">
                <h4>Attending (<%= attendees.length %>)</h4>
                <% if (attendees.length === 0) { %>
                  <h6><%= noAttendees %></h6>
                  <% } %>
                <div class="card">
                  <ul class="list-group list-group-flush">
                    <% attendees.forEach((person) => { %>
                    <li class="list-group-item">
                      <img src="<%= person.photo %>"
                           class="img img-fluid round-img"></span>
                      <%= person.first_name %> <%= person.last_name %>
                    </li>
                    <% }) %>
                  </ul>
                </div>
              </div>
            </div>
            
          </div>
          <div class="col-8">
            <div class="row">
              <div class="col-12">
                <h4><%= event.location %></h4>
                <h6><%= event.date %></h6>
                <p><%= event.description %></p>
                <form method="POST" action="/join/<%= event.id %>">
                  <input type="hidden" name="userId" value="<%= user.id %>">
                  <button id="join-event-btn" type="submit" class="btn btn-primary" event-id="<%= event.id %>">Join Event</button>
                </form>
                <!-- Edit button if administrator -->
                <a href="/events/<%= event.id %>/edit"><button type="button" class="btn btn-warning">Edit</button></a>
              </div>
            </div>
            <div class="row mt-5">
              <div class="col-12">
                <h4>Connect with Attendees!</h4>
                <div id="message-box" class="message-area">
                  <!--Messages-->
                </div>
                <form method="" class="form-inline">
                  <div class="form-group mt-1 full-width-form">
                    <textarea name="message" rows="1" autocomplete="off" wrap="hard" class="message-field form-control"></textarea>
                    <label for="message"><button type="submit" class="btn btn-success ml-2">Send</button></label>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

<%- include _footer.ejs %>

