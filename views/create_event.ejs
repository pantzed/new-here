</head>
<body>

  <%- include _nav.ejs %>

  <main id="main-content" class="container-fluid fill-screen">
    <div class="row d-flex justify-content-center mt-5">
      <div class="col-8 mrl-auto">
        <h4>Add a New Event</h4>
        <form method="POST" action="/events/add">
          <div class="form-control">

            <input type="hidden" id="admin">

            <label for="title" class="mt-3">Event Title</label>
            <input type="text" class="form-control mb-3" id="name" name="title">

            <label for="description">Description</label>
            <textarea type="text" class="form-control mb-3" id="description" name="description"></textarea>

            <label for="date">Date, Time</label>
            <input type="datetime-local" class="form-control mb-3" id="date" name="date">

            <label for="location">Location</label>
            <input type="text" class="form-control mb-3" id="location" name="location">

            <label for="photo">Image</label>
            <input type="url" class="form-control mb-3" id="image" name="photo">
            <hr>
            <button type="submit" class="btn btn-warning mb-3">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </main>

