<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" 
        href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" 
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" 
        crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" media="screen" href="../stylesheets/style.css" />
  <link rel="stylesheet" type="text/css" media="screen" href="../stylesheets/events.css" />
  <link href="https://fonts.googleapis.com/css?family=Gochi+Hand|Rubik|Lato" rel="stylesheet">
</head>
<body>

  <%- include _nav.ejs %>

  <main id="main-content" class="container-fluid fill-screen">
    <div class="row mt-5 mr-3 ml-3">
      <div class="col-12">
        <h2>Events in Austin, TX</h2>
        <% if (events.length === 0) { %>
        <h4><%= noEvents  %></h4>
        <% }; %>
        <% events.forEach((event) => { %>

        <div class="row mt-5 mb-5"> <!--event row-->
          <div class="col-4">
            <img src=<%= event.photo %>
                class="img img-fluid img-shadow" />
          </div>
          <div class="col-8">
            <h4><%= event.title %></h4>
            <h6><%= event.location %></h6>
            <h6><%= event.date %></h6>
            <p><%= event.description %></p>
            <form method="POST" action="/join/<%= event.id %>">
              <input type="hidden" name="userId" value="<%= user.id %>">
              <button id="join-event-btn" type="submit" class="btn btn-primary" event-id="<%= event.id %>">Join Event</button>
            </form>
            <!-- This link needs to receive an attribute from the db with the event's id -->
            <a href="/events/<%= event.id %>"><button type="button" class="btn btn-info">Details</button></a>
          </div>
        </div>
        <hr>

        <% }) %>
      </div>
    </div>
  </main>

<%- include _footer.ejs %>

